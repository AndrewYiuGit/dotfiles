# Navigation
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Directory Shortcuts
alias sch="cd ~/Documents/Documents/School"
alias dl="cd ~/Downloads"
alias dt="cd ~/Documents"

# File Listing
alias ll="ls -la"
alias la="ls -laF"
alias ls="ls -F"

# Command Shortcuts
alias py="python"
alias py3="python3"
alias pytest3="py3 -m py.test"
alias g="git"
alias s="svn"
alias j="jobs"

# Finder
alias show_hidden="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias show_hidden="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# OSX keyboard
alias hold_key="defaults write com.sublimetext.3 ApplePressAndHoldEnabled -bool"

# One of @janmoesen’s ProTip™s
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
    alias "$method"="lwp-request -m '$method'"
done

